{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                     
    "outDir": "./dist",                     
    "rootDir": "./src",                     
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
